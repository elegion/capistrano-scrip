<% scopes(method_listing(false)) do |list, scope| %>
  <div id="<%= scope %>_method_details" class="method_details_list"><% next if scope.to_s.downcase != 'class' %>
    <h2>Tasks Details</h2>

    <% list.each_with_index do |meth, i| %>
      <%= yieldall :object => meth, :owner => object, :index => i %>
    <% end %>
  </div>
<% end %>
